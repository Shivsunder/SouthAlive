    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .main {
            flex: 1 0 auto;
        }

        h1, h2, h3, h4, h5, h6, p, span, a, li, input {
            font-family: roboto;
        }

        nav {
            padding: 0;
        }

            nav .brand-logo {
                margin-left: 20px;
                padding-top: 0px;
                width: 110px;
            }

            nav li a {
                color: black;
            }

        #Aboutdropdown, #Teamdropdown {
            width: 150px !important;
        }

        nav ul a.btn {
            margin-left: 3px;
            margin-right: 3px;
        }

        nav .button-collapse i {
            color: black;
        }

        .AboutC, .GetInC, .AdminC, .TeamC {
            display: none;
            background: #ddd;
        }

            .AboutC:last-child {
                border-bottom: 1px solid black;
            }

        .dropdown-content li > a, .dropdown-content li > span {
            color: black;
        }

        .Bread {
            padding-left: 20px;
            margin-bottom: 30px;
        }

        #sidenav-overlay {
            z-index: 996;
        }

        #dropdownAbout {
            width: 200px !important;
        }

        .footerLeft p {
            line-height: 1em;
        }

        @@media only screen and (min-width: 1024px) {
            .brand-logo:hover {
                animation: forLogo 1s ease-in infinite;
            }
        }

        @@keyframes forLogo {
            20% {
                transform: rotate(-3deg)
            }

            40% {
                transform: rotate(3deg)
            }

            60% {
                transform: rotate(-3deg)
            }

            80% {
                transform: rotate(3deg)
            }

            100% {
                transform: rotate(0deg)
            }
        }

        @@media only screen and (max-width: 600px) {
            .Bread i {
                padding-top: 15px;
            }
            nav .brand-logo {
                margin-left: 20px;
                padding-top: 0px;
                width: 100px;
            }
        }
    </style>

    @RenderSection("styles", required: false)

    @Html.Raw(JavaScriptSnippet.FullScript)

</head>
