<div class="container" style="padding:20px 0;">
    <form action="/Editor/PostWrite" method="post">
        <div class="form-group">
            <label class="col s12 control-label" for="title">Title:</label>
            <div class="col s12">
                <input type="text" class="form-control" id="title" name="title" placeholder="Title">
            </div>
        </div>

        <div class="form-group">
            <label class="col s12 control-label" for="editor">Content:</label>
            <div class="col s12">
                <textarea id="editor" name="editor" cols="80" rows="10"></textarea>
                <script src="//cdn.ckeditor.com/4.7.3/standard/ckeditor.js"></script>
                <script>
                    CKEDITOR.replace("editor", {
                        height: '300px',
                        filebrowserImageUploadUrl: '/Editor/UploadImage'
                    });
                </script>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="center">
                <button type="submit" class="btn btn-default">Go!</button>
            </div>
        </div>
    </form>

</div>
<div class="container">
    @Html.Raw(ViewBag.EditorText)
</div>